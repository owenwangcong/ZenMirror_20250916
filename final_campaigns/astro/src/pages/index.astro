    </div>
  </section>


  <!-- Feature Grid -->
  <FeatureGrid />
  
  <!-- Technology Section -->
  <section id="technology" class="py-16 md:py-24 bg-zen-white">
    <div class="container-custom">
      <div class="text-center mb-16">
