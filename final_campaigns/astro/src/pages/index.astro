---
import { Icon } from 'astro-icon/components';
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import FeatureGrid from '../components/FeatureGrid.astro';
import HRVChart from '../components/charts/HRVChart.astro';
import SessionQualityChart from '../components/charts/SessionQualityChart.astro';
import RadarComparison from '../components/charts/RadarComparison.astro';
import ComparisonMatrix from '../components/ComparisonMatrix.astro';
import '../styles/global.css';
---

<BaseLayout>
  <!-- Hero Section -->
  <Hero />

  <!-- Video Section -->
  <section class="py-16 md:py-24 bg-zen-white">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <div class="relative aspect-video rounded-3xl overflow-hidden shadow-zen-lg group">
          <!-- Video Element -->
          <video
            id="campaign-video"
            class="w-full h-full object-cover"
            preload="metadata"
            poster="/assets/images/branding/zenmirror-logo.png"
          >
            <source src="/assets/videos/campaign.mp4" type="video/mp4" />
            Your browser does not support the video tag.
          </video>

          <!-- Play Button Overlay -->
          <div id="video-overlay" class="absolute inset-0 flex items-center justify-center bg-gradient-to-br from-zen-forest-medium/80 to-zen-forest-light/80 cursor-pointer transition-opacity duration-300">
            <button class="w-20 h-20 bg-zen-orange-accent rounded-full flex items-center justify-center shadow-zen-glow transform group-hover:scale-110 transition-transform duration-300">
              <Icon name="heroicons:play-solid" class="w-10 h-10 text-white ml-1" />
            </button>
          </div>

          <!-- Video Info Overlay -->
          <div id="video-info" class="absolute bottom-0 left-0 right-0 p-8 bg-gradient-to-t from-black/60 to-transparent pointer-events-none">
            <h3 class="text-2xl font-semibold text-white mb-2">See ZenMirror in Action</h3>
            <p class="text-white/90">Watch how contactless radar technology revolutionizes meditation practice</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <script>
    const video = document.getElementById('campaign-video') as HTMLVideoElement;
    const overlay = document.getElementById('video-overlay');
    const videoInfo = document.getElementById('video-info');

    if (video && overlay && videoInfo) {
      // Play video when overlay is clicked
      overlay.addEventListener('click', () => {
        video.play();
        overlay.style.opacity = '0';
        videoInfo.style.opacity = '0';
        setTimeout(() => {
          overlay.style.display = 'none';
          videoInfo.style.display = 'none';
        }, 300);
        video.setAttribute('controls', 'true');
      });

      // Show overlay when video ends
      video.addEventListener('ended', () => {
        overlay.style.display = 'flex';
        videoInfo.style.display = 'block';
        setTimeout(() => {
          overlay.style.opacity = '1';
          videoInfo.style.opacity = '1';
        }, 10);
        video.removeAttribute('controls');
      });
    }
  </script>

  <!-- How It Works -->
  <section class="py-16 md:py-24 bg-zen-white">
    <div class="container-custom">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-semibold text-zen-forest-medium mb-4">
          How ZenMirror Works
        </h2>
        <p class="text-lg text-zen-gray-dark max-w-3xl mx-auto">
          A complete closed-loop system that monitors, assesses, provides feedback, and helps you improve
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 max-w-6xl mx-auto">
