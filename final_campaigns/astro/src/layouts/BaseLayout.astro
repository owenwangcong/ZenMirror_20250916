---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = "ZenMirror 禅镜 - Revolutionary Contactless Meditation Technology | Kickstarter",
  description = "Experience the future of meditation with millimeter wave radar technology. No wearables, no contact, just pure mindfulness monitoring and personalized feedback from 6 wisdom mentors."
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description}>

  <!-- Open Graph Meta Tags -->
  <meta property="og:title" content="ZenMirror - World's First Contactless Meditation Monitoring System">
  <meta property="og:description" content={description}>
  <meta property="og:image" content="/assets/og-image.jpg">
  <meta property="og:type" content="website">

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Noto+Serif:wght@400;500&display=swap" rel="stylesheet">

  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
</head>
<body class="antialiased">
  <slot />
</body>
</html>
