---
import { Icon } from 'astro-icon/components';
---

<section class="hero-section relative overflow-hidden bg-gradient-to-br from-zen-forest-medium to-zen-forest-light text-white section-padding">
  <!-- Animated background -->
  <div class="absolute inset-0 opacity-10">
    <div class="radar-animation"></div>
  </div>

  <div class="container-custom relative z-10">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Left column: Content -->
      <div class="space-y-8 animate-fade-in">
        <!-- Badge -->
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-zen-orange-accent to-zen-orange-warm rounded-full text-sm font-semibold shadow-zen-glow">
          <span>ðŸš€</span>
          <span>LIVE ON KICKSTARTER</span>
        </div>

        <!-- Title -->
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight">
          World's First <span class="bg-gradient-to-r from-zen-orange-accent to-zen-orange-warm bg-clip-text text-transparent">Contactless</span><br>
          Meditation Monitoring System
        </h1>

        <!-- Subtitle -->
        <p class="text-lg md:text-xl text-white/90 leading-relaxed max-w-2xl">
          Experience revolutionary mindfulness with millimeter wave radar technology.
          No wearables, no contact, just pure awareness monitoring and personalized
          guidance from 6 cultural wisdom mentors.
        </p>

        <!-- Features list -->
        <div class="grid grid-cols-2 gap-3 text-sm md:text-base">
          <div class="flex items-center gap-2">
            <Icon name="heroicons:check-circle-solid" class="w-5 h-5 text-zen-orange-accent flex-shrink-0" />
            <span>Patent-Pending Technology</span>
          </div>
          <div class="flex items-center gap-2">
            <Icon name="heroicons:check-circle-solid" class="w-5 h-5 text-zen-orange-accent flex-shrink-0" />
            <span>mmWave Radar Sensing</span>
          </div>
          <div class="flex items-center gap-2">
            <Icon name="heroicons:check-circle-solid" class="w-5 h-5 text-zen-orange-accent flex-shrink-0" />
            <span>HRV & RSA Analysis</span>
          </div>
          <div class="flex items-center gap-2">
            <Icon name="heroicons:check-circle-solid" class="w-5 h-5 text-zen-orange-accent flex-shrink-0" />
            <span>6 Cultural Mentors</span>
          </div>
          <div class="flex items-center gap-2">
            <Icon name="heroicons:check-circle-solid" class="w-5 h-5 text-zen-orange-accent flex-shrink-0" />
            <span>Real-Time Guidance</span>
          </div>
          <div class="flex items-center gap-2">
            <Icon name="heroicons:check-circle-solid" class="w-5 h-5 text-zen-orange-accent flex-shrink-0" />
            <span>Privacy Protected</span>
          </div>
        </div>

        <!-- CTA Button -->
        <div class="space-y-4">
          <a href="#rewards" class="btn-primary inline-flex items-center gap-2 text-lg">
            Back This Project
            <Icon name="heroicons:arrow-right" class="w-5 h-5" />
          </a>
          <p class="text-sm text-white/80">
            Early Bird: <strong class="text-zen-orange-accent">$299</strong> (40% off retail)
          </p>
        </div>

        <!-- Stats -->
        <div class="grid grid-cols-3 gap-6 pt-8 border-t border-white/20">
          <div>
            <div class="text-2xl md:text-3xl font-bold">$247K</div>
            <div class="text-sm text-white/70">raised</div>
          </div>
          <div>
            <div class="text-2xl md:text-3xl font-bold">1,234</div>
            <div class="text-sm text-white/70">backers</div>
          </div>
          <div>
            <div class="text-2xl md:text-3xl font-bold">18 days</div>
            <div class="text-sm text-white/70">to go</div>
          </div>
        </div>
      </div>

      <!-- Right column: Product showcase -->
      <div class="relative animate-fade-in" style="animation-delay: 0.2s;">
        <div class="relative z-10">
          <!-- Placeholder for product image -->
          <div class="aspect-square bg-white/10 rounded-3xl backdrop-blur-sm p-8 flex items-center justify-center">
            <div class="text-center space-y-4">
              <div class="w-32 h-32 mx-auto bg-white/20 rounded-full flex items-center justify-center">
                <Icon name="heroicons:light-bulb" class="w-16 h-16 text-white" />
              </div>
              <div class="text-lg font-semibold">ZenMirror Device</div>
              <div class="text-sm text-white/70">Patent-Pending Radar Technology</div>
            </div>
          </div>

          <!-- Floating data card -->
          <div class="absolute -bottom-6 -right-6 bg-white text-zen-charcoal rounded-2xl p-6 shadow-zen-lg max-w-xs">
            <h4 class="font-semibold mb-3">Live Monitoring</h4>
            <div class="space-y-2 text-sm">
              <div class="flex justify-between items-center">
                <span class="text-zen-gray-dark">Heart Rate</span>
                <span class="font-bold text-zen-forest-medium">68 BPM</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-zen-gray-dark">Breath Rate</span>
                <span class="font-bold text-zen-forest-medium">6/min</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-zen-gray-dark">HRV Score</span>
                <span class="font-bold text-green-600">89</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Radar waves animation -->
        <div class="absolute inset-0 flex items-center justify-center pointer-events-none">
          <div class="radar-wave"></div>
          <div class="radar-wave" style="animation-delay: 1s;"></div>
          <div class="radar-wave" style="animation-delay: 2s;"></div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes radar {
    0% {
      transform: scale(0);
      opacity: 1;
    }
    100% {
      transform: scale(2);
      opacity: 0;
    }
  }

  .radar-wave {
    position: absolute;
    width: 100px;
    height: 100px;
    border: 2px solid rgba(217, 122, 52, 0.5);
    border-radius: 50%;
    animation: radar 3s ease-out infinite;
  }

  .radar-animation {
    width: 100%;
    height: 100%;
    background-image: radial-gradient(circle, rgba(255,255,255,0.1) 1px, transparent 1px);
    background-size: 50px 50px;
    animation: radar-bg 20s linear infinite;
  }

  @keyframes radar-bg {
    0% {
      transform: translateY(0);
    }
    100% {
      transform: translateY(50px);
    }
  }
</style>
