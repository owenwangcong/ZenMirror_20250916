---
import { Icon } from 'astro-icon/components';
---

<section class="py-10 md:py-14 bg-gradient-to-b from-zen-white to-zen-cream">
  <div class="container-custom max-w-4xl">
    <!-- Header Banner -->
    <div class="bg-gradient-to-r from-zen-forest-dark to-zen-forest-medium rounded-2xl p-6 mb-6 text-center relative overflow-hidden">
      <div class="relative z-10">
        <div class="text-4xl md:text-5xl font-bold text-white mb-1">
