    </div>

    <!-- Icon Features Grid -->
    <div class="grid grid-cols-3 gap-3 mb-4">
      <div class="bg-white rounded-xl p-4 text-center shadow-sm">
        <div class="w-12 h-12 mx-auto mb-2 bg-gradient-to-br from-red-500 to-pink-500 rounded-xl flex items-center justify-center">
          <Icon name="heroicons:heart" class="w-7 h-7 text-white" />
        </div>
        <p class="text-xs font-semibold text-zen-gray-dark">HRV & RSA<br/>Analytics</p>
      </div>
      <div class="bg-white rounded-xl p-4 text-center shadow-sm">
        <div class="w-12 h-12 mx-auto mb-2 bg-gradient-to-br from-purple-600 to-indigo-600 rounded-xl flex items-center justify-center">
          <span class="text-white font-bold text-xl">6</span>
        </div>
        <p class="text-xs font-semibold text-zen-gray-dark">AI Wisdom<br/>Mentors</p>
      </div>
      <div class="bg-white rounded-xl p-4 text-center shadow-sm">
        <div class="w-12 h-12 mx-auto mb-2 bg-gradient-to-br from-green-500 to-teal-600 rounded-xl flex items-center justify-center">
          <Icon name="heroicons:adjustments-horizontal" class="w-7 h-7 text-white" />
        </div>
        <p class="text-xs font-semibold text-zen-gray-dark">3 Modes:<br/>Meditateâ€¢Workâ€¢Study</p>
      </div>
    </div>

    <!-- Main Feature Images Grid -->
    <div class="grid grid-cols-2 gap-3 mb-4">
      <!-- App Interface -->
      <div class="bg-white rounded-xl overflow-hidden shadow-sm">
        <img src="/assets/images/app/app-interface.png" alt="App Interface" class="w-full h-48 object-cover"/>
        <div class="p-3 text-center">
          <p class="text-xs font-semibold text-zen-gray-dark">Mobile App & Device</p>
          <p class="text-xs text-zen-gray-medium">iOS & Android</p>
        </div>
      </div>

      <!-- Device Close-up -->
      <div class="bg-white rounded-xl overflow-hidden shadow-sm">
        <img src="/assets/images/product/zenmirror-device.png" alt="Device" class="w-full h-48 object-cover"/>
        <div class="p-3 text-center">
          <p class="text-xs font-semibold text-zen-gray-dark">ZenMirror Device</p>
          <p class="text-xs text-zen-gray-medium">Premium Build Quality</p>
        </div>
      </div>
    </div>

    <!-- Feature Callouts -->
    <div class="grid grid-cols-3 gap-4 mb-5">
      <div class="bg-gradient-to-tr from-zen-forest-medium to-zen-bamboo rounded-2xl p-5 text-white text-center shadow-md">
        <div class="flex justify-center mb-2">
          <Icon name="heroicons:arrow-path" class="w-10 h-10" />
